<div>
  <div>
    <h1>
      Person #<%= @the_person.id %> details
    </h1>

    <div>
      <div>
        <a href="/people">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_person/<%= @the_person.id %>">
          Delete person
        </a>
      </div>
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <dd>
        <%= @the_person.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_person.last_name %>
      </dd>

      <dt>
        Nick
      </dt>
      <dd>
        <%= @the_person.nickname %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @the_person.dob %>
      </dd>

      <dt>
        Person notes
      </dt>
      <dd>
        <%= @the_person.person_notes %>
      </dd>

      <dt>
        Primary relationship
      </dt>
      <dd>
        <%= @the_person.primary_relationship_id %>
      </dd>

      <dt>
        User email
      </dt>
      <dd>
        <%= @the_person.user_email %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_person.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_person.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit person
    </h2>

    <form action="/modify_person/<%= @the_person.id %>"  method="post" >
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_person.first_name %>">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_person.last_name %>">
      </div>

      <div>
        <label for="nickname_box">
          Nickname
        </label>

        <input type="text" id="nickname_box" name="query_nickname" value="<%= @the_person.nickname %>">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob" value="<%= @the_person.dob %>">
      </div>

      <div>
        <label for="person_notes_box">
          Person notes
        </label>

        <textarea id="person_notes_box" name="query_person_notes"><%= @the_person.person_notes %></textarea>
      </div>

      <div>
        <label for="primary_relationship_id_box">
          Primary relationship
        </label>

        <input type="text" id="primary_relationship_id_box" name="query_primary_relationship_id" value="<%= @the_person.primary_relationship_id %>">
      </div>

      <div>
        <label for="user_email_box">
          User email
        </label>

        <input type="text" id="user_email_box" name="query_user_email" value="<%= @the_person.user_email %>">
      </div>

      <button>
        Update person
      </button>
    </form>
  </div>
</div>

<hr>
