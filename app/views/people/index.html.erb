<div>
  <div>
    <h1>
      List of all people
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new person
    </h2>

    <form action="/insert_person" method="post">
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name">
      </div>

      <div>
        <label for="nickname_box">
          Nickname
        </label>

        <input type="text" id="nickname_box" name="query_nickname">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob">
      </div>

      <div>
        <label for="person_notes_box">
          Person notes
        </label>

        <textarea id="person_notes_box" name="query_person_notes" rows="3"></textarea>
      </div>

      <div>
        <label for="primary_relationship_id_box">
          Primary relationship
        </label>

        <input type="text" id="primary_relationship_id_box" name="query_primary_relationship_id">
      </div>

      <div>
        <label for="user_email_box">
          User email
        </label>

        <input type="text" id="user_email_box" name="query_user_email">
      </div>

      <button>
        Create person
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Nickname
        </th>

        <th>
          Dob
        </th>

        <th>
          Person notes
        </th>

        <th>
          Relationship
        </th>


        <th>
        </th>

      </tr>

      <% @list_of_people.each do |a_person| %>
      <tr>
        <td>
          <%= a_person.id %>
        </td>

        <td>
          <%= a_person.first_name %>
        </td>

        <td>
          <%= a_person.last_name %>
        </td>

        <td>
          <%= a_person.nickname %>
        </td>

        <td>
          <%= a_person.dob %>
        </td>

        <td>
          <%= a_person.person_notes %>
        </td>

        <td>
          <%= a_person.primary_relationship_id %>
        </td>

        <td>
          <a href="/people/<%= a_person.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
